!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title TrainingClub
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %link{:crossorigin => "anonymous", :href => "https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", :rel => "stylesheet"}/
    %link{href: "https://use.fontawesome.com/releases/v5.6.1/css/all.css", rel: "stylesheet"}/
    %script{crossorigin: "anonymous", integrity: "sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=", src: "https://code.jquery.com/jquery-3.6.0.js"}
  %body
    .header
      .header_icon 
        = link_to image_tag("Training club-logo (3).png", class: "image"), root_path
      .a.nav-button
        %span
        %span
        %span
      .nav.nav-wrap
        - if user_signed_in?
          %ul.nav
            %li.nav-item-active
              %i.fas.fa-user
                = link_to 'プロフィール', user_path(id: current_user.id)
            %li.nav-item-active
              %i.far.fa-calendar-check
                = link_to '今日のTraining', new_article_path
            %li.nav-item-active
              %i.far.fa-comments
                = link_to 'みんなのTraining', articles_path
            %li.nav-item-active    
              %i.fas.fa-sign-out-alt
                = link_to 'ログアウト', destroy_user_session_path, data: { method: 'delete' }
    - if flash.present?
      .flash
        - flash.each do |key, value|
          %div{:class => key}= value
            

        
    
    = yield
