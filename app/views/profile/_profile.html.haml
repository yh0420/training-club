.other-profile-card
  .other-profile-card__inner
    .profile-thumb
      - if @user.avatar.attached?
        = image_tag @user.avatar,class: 'logo'
      -else 
        = image_tag 'default.png', class: 'logo'
    .profile-content
      .profile-name 
        = @user.name 
      %div{class: "mypage-follow-contents-#{@user.id}"}
        = render 'relationships/relationship', user: @user
      .profile-level
        = @user.level
      .profile-obvective 
        %p 目標： #{@user.objective}