= form_with(model: @article, url: articles_path, method: 'post', local: true) do |f| 
  %div 
    = f.collection_select :training_id, current_user.trainings.all, :id, :name, {prompt: ""}, class: 'form-control'  
  %div
    = f.label :body, '内容'
  %div
    = f.text_area :body
    = f.submit '保存', class: 'btn-primary'

